
$("#edit_project_<%=@project.id%>").on("ajax:success", function(e, data, status, xhr) {
  $("#edit_project_<%=@project.id%>").remove()
  $("#projectSummary<%=@project.id%>").append($("<%= j render(@project) %>"))
  $("[id^=projectTitle]").click(function(){
    id = ($(this).attr("project_id")) 
    $("#project" + id).remove()
  })  
})

$("#edit_project_<%=@project.id%>").on("ajax:error", function(e, data, status, xhr) {
  if (<%= @project.errors.any? %>){
    $("#projectErrors<%=@project.id %>").html("<small class = 'error'><% @project.errors.full_messages.each do |msg| %><%= msg %><% end %></small>")
  }
})
