<h1>Your Projects</h1>
<% if @projects != nil %>
  <% @projects.each do |project| %>
    <h3><%=link_to project.title, user_project_path(current_user, project) %></h3>
  <%end %>
<%end%>

<h1> Add a project</h1>
<%= form_for :project, url: user_projects_path(current_user) do |f| %>
  <%= f.text_field :title, :placeholder => "Project Title" %>
  <%= f.submit %>
<% end %>

