
    <div class = "row">
      <div class = "small-4 columns">
        <h1 class="project__show__title secondary text-center" ><%= @project.title %></h1>
      </div>
      <%=form_for :model, url: user_project_models_path(current_user,@project) do |f| %>
        <div class = "small-5 columns">
    <% if (@model != nil && @model.errors.any?)  %>
      <div id="error_explanation">
          <%= f.text_field :name, :placeholder => "Model Name", :class => "projectShow__addModel"%>
        <small class = "error">
          <% @model.errors.full_messages.each do |msg| %>
            <%= msg %>
          <% end %>
        </small>
      </div>
    <% else %>
          <%= f.text_field :name, :placeholder => "Model Name", :class => "projectShow__addModel"%>
    <% end%>
        </div>
        <div class = "small-3 columns">
          <%= f.submit "Add Model", :class => "projectShow__addModel__button button" %>
        </div>
      <% end %>
      </div>
    <div class = "row text-center">
      <div class = "small-2 small-offset-2 columns">
        <h3>CREATE</h3>
      </div>
      <div class = "small-2 columns">
        <h3>READ</h3>
      </div>
      <div class = "small-2 columns">
        <h3>EDIT</h3>
      </div>
      <div class = "small-2 end columns">
        <h3>DELETE</h3>
      </div>
    </div>

    <% values = {0 => "NotStarted.png", 1 => "Done.png", 2 => "InProgress.png", 3 => "NotApplicable.png"} %>

<% @project.models.each do |model| %>
