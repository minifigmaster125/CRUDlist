
    <div class = "row crud">
      <div class = "small-2 columns">
        <h1 class="project__show__title secondary" ><%= @project.title %></h1>
      </div>
      <div class = "small-2 columns">
        <h3>CREATE</h3>
      </div>
      <div class = "small-2 columns">
        <h3>READ</h3>
      </div>
      <div class = "small-2 columns">
        <h3>EDIT</h3>
      </div>
      <div class = "small-2 end columns">
        <h3>DELETE</h3>
      </div>
    </div>

    <% values = {0 => "NotStarted.png", 1 => "Done.png", 2 => "InProgress.png", 3 => "NotApplicable.png"} %>

<% @project.models.each do |model| %>
  <div class = "row models">
    <div class = "small-2 columns">
      <h3 class="model__show__title primary"><%= model.name %></h3>
    </div>
    <div class = "small-2 columns">
     <%= image_tag(values[model.CRUDcreate], class: "model__select__create__#{model.id}", :"data-dropdown"=> "dropCreate#{model.id}")%>
      <%= content_tag :ul, :id => "dropCreate#{model.id}", :class => "f-dropdown content" do %> 
        <%= content_tag :li, :value => 1, :id => "model__change__#{model.id}", :modelID => model.id, :projectID => @project.id, :userID => current_user.id, :name => "CRUDcreate" do%><%= image_tag("Done.png") %><%end%>
        <%= content_tag :li, :value => 2, :id => "model__change__#{model.id}", :modelID => model.id, :projectID => @project.id, :userID => current_user.id, :name => "CRUDcreate" do%><%= image_tag("InProgress.png") %><%end%>
        <%= content_tag :li, :value => 3, :id => "model__change__#{model.id}", :modelID => model.id, :projectID => @project.id, :userID => current_user.id, :name => "CRUDcreate" do%><%= image_tag("NotApplicable.png") %><%end%>
      <% end %>
    </div>
   <div class = "small-2 columns">  
     <%= image_tag(values[model.CRUDread], class: "model__select__read__#{model.id}", :"data-dropdown"=> "dropRead#{model.id}")%>
