

<% content_for :header do %>
  <div class = "fixed">
  <nav class="top-bar" data-topbar >
    <ul class="title-area">
      <li class="name">
      <% if user_signed_in? %>
        <h1><%= link_to "CRUDlist", user_projects_path(current_user), class: "top-bar__title"%></h1>
      <% end %>
      </li>
    </ul>
    <section class = "top-bar-section">
    <ul class = "right">
      <% if user_signed_in? %>
        <li><%=link_to "#{current_user.email}", edit_user_registration_path(current_user), class: "top-bar-section__email" %></li>
        <li><%=link_to 'Projects', user_projects_path(current_user) %></li>
        <li><%=link_to 'Help', statics_help_path %></li>
        <li><%=link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
      <%end%>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
  </nav>
</div>
<% end %>

<% content_for :footer do %>
  <div class="footer" >
    <p>Courtesy of Suchaaver Chahal</p>
    <div class = "row">
    <ul class = "inline-list">
    <li><h5><a href="https://github.com/minifigmaster125/CRUDlist" class="footer__links">View it on Github</a></h5></li>
    <li><h5>  <a href="https://github.com/minifigmaster125/CRUDlist" class="footer__links">Talk about it on Hacker News</a></h5></li>
    <li><h5 class="secondary"> Talk to me at xchaoscontrolx AT gmail DOT com</h5></li>
    </div>
  </div>
<% end %>


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "CRUDlist" %></title>

    <link href='http://fonts.googleapis.com/css?family=Raleway:400,900' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>


  <body>
    <div class = "wrap" >

      <% if user_signed_in? %>
    <%= yield :header %>
      <%end%>

    <div class = "main" >
    <!%= render 'layouts/messages' %>
    <%= yield %>
  </div>
    </div>
    <%= yield :footer %>


    <%= javascript_include_tag "application" %>
  </body>
</html>


