

<% content_for :header do %>
  <div class = "fixed">
  <nav class="top-bar" data-topbar >
    <ul class="title-area">
      <li class="name">
      <% if user_signed_in? %>
        <h1><%= link_to "CRUDlist", user_projects_path(current_user), class: "top-bar__title"%></h1>
      <% else %>
        <h1><%= link_to "CRUDlist", new_user_session_path, class: "top-bar__title"%></h1>
      <%end%>
      </li>
    </ul>
    <section class = "top-bar-section">
    <ul class = "right">
      <% if user_signed_in? %>
        <li><%=link_to "#{current_user.email}", edit_user_registration_path(current_user), class: "top-bar-section__email" %></li>
        <li><%=link_to 'Projects', user_projects_path(current_user) %></li>
        <li><%=link_to 'Edit Yourself', edit_user_registration_path(current_user) %></li>
        <li><%=link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
      <%end%>
    </ul>
  </nav>
</div>
<% end %>

<% content_for :footer do %>
  <div class="footer" >
    <p>Courtesy of Suchaaver Chahal</p>
    <p class="footer__github">View it on Github</p>
  </div>
<% end %>


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "foundation-rails" %></title>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>


  <body>
    <%= yield :header %>

    <%= render 'layouts/messages' %>
    <%= yield %>
    <%= yield :footer %>
    <%= javascript_include_tag "application" %>
  </body>
</html>


